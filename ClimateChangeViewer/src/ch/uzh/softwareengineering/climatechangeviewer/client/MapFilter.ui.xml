<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
  <ui:style>
    * {
	  font-family: 'Roboto', sans-serif;
	}

    .filterPanel {
	  background-color: white;
	  box-shadow: 0px 0px 5px 1px rgba(0,0,0,0.30);
	  margin-left: 10px;
	  margin-right: 10px;
	  margin-top: 10px;
	  margin-botttom: 10px;
	}
	
	.inputBox {
	  height: 25px;
	  width: 188px;
	  border-left: 1px solid white;
	  border-right: 1px solid white;
	  border-top: 1px solid white;
	  border-bottom: 1px solid #e0e0e0;
	  border-radius: 0px 0px 0px 0px;
	}
		
	.inputBoxLabel {
	  cursor: pointer;
	  height: 20px;
	}
	
	.inputBoxLabelPeriod {
	  cursor: pointer;
	  height: 20px;
	  width: 55px;
	}
		
	.inputValueLabelPeriod {
	  height: 20px;
	  width: 77px;
	  color: #0091ea;
	  font-weight: bold;
	  text-align: right;
	  cursor: pointer;
	}
		
	.period2QueryLabelOffset {
	  margin-left: 394px;
	}
		
	.inputPanel-row1 {
	  margin-right: 10px;
	  margin-top: 10px;
	  margin-bottom: 10px;
	}
		
	.inputPanel-row1-first {
	  margin-left: 10px;
	  margin-right: 20px;
	  margin-top: 10px;
	  margin-bottom: 10px;
	}
		
	.inputPanel-row1-last {
	  margin-right: 20px;
	  margin-top: 10px;
	  margin-bottom: 10px;
	}
				
	.filterButton {
	  height: 45px;
	  width: 94px;
	  margin-left: 0px;
	  margin-right: 10px;
	  margin-top: 10px;
	  margin-bottom: 10px;
	  background: #0091ea;
	  border: none;
	  box-shadow: 0px 0px 5px 1px rgba(0,0,0,0.30);
	  color: white;
	  font-weight: bold;
	  cursor: pointer;
	}
		
	.filterButton:hover {
	  background: #00b0ff;
	  box-shadow: 0px 0px 5px 2px rgba(0,0,0,0.30);
	}
				
    .filterButton:disabled {
	  background: #e0e0e0;
	  box-shadow: 0px 0px 5px 1px rgba(0,0,0,0.30);
	  cursor: wait;
    }
  </ui:style>

  <g:FlowPanel>
    <g:HorizontalPanel styleName="{style.filterPanel}">
	  <g:VerticalPanel styleName="{style.inputPanel-row1-first}">
	    <g:Label ui:field="uncertaintyQueryLabel" styleName="{style.inputBoxLabel}">Maximum Uncertainty (Â°C)</g:Label>
		<g:DoubleBox ui:field="uncertaintyQueryInputBox" styleName="{style.inputBox}"></g:DoubleBox>
	  </g:VerticalPanel>
	  <g:VerticalPanel styleName="{style.inputPanel-row1-last}">
	    <g:HorizontalPanel>
		  <g:HorizontalPanel>
		    <g:Label ui:field="period1QueryLabel" styleName="{style.inputBoxLabelPeriod}">Period 1:</g:Label>
			<g:Label ui:field="period1QueryValueLabel" styleName="{style.inputValueLabelPeriod}">1900-1909</g:Label>
		  </g:HorizontalPanel>
		  <g:HorizontalPanel styleName="{style.period2QueryLabelOffset}">
			<g:Label ui:field="period2QueryLabel" styleName="{style.inputBoxLabelPeriod}">Period 2:</g:Label>
			<g:Label ui:field="period2QueryValueLabel" styleName="{style.inputValueLabelPeriod}">2000-2009</g:Label>
		  </g:HorizontalPanel>				
		</g:HorizontalPanel>
		<g:HorizontalPanel ui:field="sliderPanel">
	    </g:HorizontalPanel>
	  </g:VerticalPanel>
	  <g:Button ui:field="filterButton" styleName="{style.filterButton}">Show</g:Button>	
    </g:HorizontalPanel>
  </g:FlowPanel>

</ui:UiBinder>