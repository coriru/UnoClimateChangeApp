<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
  <ui:style>
    * {
	  font-family: 'Roboto', sans-serif;
	}
	
    h1 {
	  margin-top: 0px;
	  font-size:16px;
	  color:#0288d1;
	}
	
	p {
	  font-size: 14px;
	}
	
	ul {
	  padding-left: 20px;
	  padding-top: 0px;
	  list-style-type: square;
	}
	
	.htmlPanel {
    width: 500px;
	  padding: 10px;
    background: white;
	  box-shadow: 0px 0px 5px 1px rgba(0,0,0,0.30);
	  margin-left: 10px;
	  margin-top: 10px;
	}
  </ui:style>

  <g:HTMLPanel styleName="{style.htmlPanel}">
    <h1>About This Project</h1>
	  <p>
	    This application originates from a software project that was part of
	    the course "Software Engineering", which took place during the fall
	    semester 2016 at the University of Zurich. The application was created by:
      <ul> 
		    <li>Sven Stoll</li>
		    <li>Sascha Sauer</li>
		    <li>Ianis Vilela</li>
		    <li>Laura Wagner</li>
		    <li>Beat Horat</li>
	    </ul>
	  </p>
  </g:HTMLPanel>
	
</ui:UiBinder>