<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.filterPanel-row1 {
			background-color: #eeeeee;
		}
		
		.filterPanel-row2 {
			background-color: #eeeeee;
			margin-bottom: 10px;
		}
		
		.inputBox {
			height: 25px;
			width: 188px;
			border: 1px solid white
		}
		
		.inputLabel {
			cursor: pointer;
			height: 20px;
		}
		
		.inputPanel-row1 {
			margin-right: 10px;
			margin-top: 10px;
			margin-bottom: 10px;
		}
		
		.inputPanel-row1-first {
			margin-left: 10px;
			margin-right: 10px;
			margin-top: 10px;
			margin-bottom: 10px;
		}
		
		.inputPanel-row2 {
			margin-right: 10px;
			margin-bottom: 10px;
		}
		
		.inputPanel-row2-first {
			margin-left: 10px;
			margin-right: 10px;
			margin-bottom: 10px;
		}
		
		.filterButton {
			cursor: pointer;
			height: 45px;
			width: 94px;
			background: #0091ea;
			color: white;
			border: none;
			font-weight: bold;
			margin-left: 292px;
			margin-right: 10px;
			margin-bottom: 10px;
		}
		
		.filterButton:hover {
			background: #00b0ff;
		}
				
		.filterButton:disabled {
			cursor: wait;
			background: #e0e0e0;
		}
	</ui:style>

	<g:FlowPanel>
		<g:HorizontalPanel styleName="{style.filterPanel-row1}">
			<g:VerticalPanel styleName="{style.inputPanel-row1-first}">
				<g:Label ui:field="cityQueryLabel" styleName="{style.inputLabel}">City</g:Label>
				<g:TextBox ui:field="cityQueryInputBox" styleName="{style.inputBox}"></g:TextBox>
			</g:VerticalPanel>
			<g:VerticalPanel styleName="{style.inputPanel-row1}">
				<g:Label ui:field="countryQueryLabel" styleName="{style.inputLabel}">Country</g:Label>
				<g:TextBox ui:field="countryQueryInputBox" styleName="{style.inputBox}"></g:TextBox>
			</g:VerticalPanel>
			<g:VerticalPanel styleName="{style.inputPanel-row1}">
				<g:Label ui:field="year1QueryLabel" styleName="{style.inputLabel}">First Year</g:Label>
				<g:IntegerBox ui:field="year1QueryInputBox" styleName="{style.inputBox}"></g:IntegerBox>
			</g:VerticalPanel>
			<g:VerticalPanel styleName="{style.inputPanel-row1}">
				<g:Label ui:field="year2QueryLabel" styleName="{style.inputLabel}">Last Year</g:Label>
				<g:IntegerBox ui:field="year2QueryInputBox" styleName="{style.inputBox}"></g:IntegerBox>
			</g:VerticalPanel>
			<g:VerticalPanel styleName="{style.inputPanel-row1}">
				<g:Label ui:field="monthQueryLabel" styleName="{style.inputLabel}">Month</g:Label>
				<g:ListBox ui:field="monthQueryInputBox" styleName="{style.inputBox}"></g:ListBox>
			</g:VerticalPanel>
		</g:HorizontalPanel>
		<g:HorizontalPanel styleName="{style.filterPanel-row2}">
			<g:VerticalPanel styleName="{style.inputPanel-row2-first}">
				<g:Label ui:field="minTemperatureQueryLabel" styleName="{style.inputLabel}">Minimum Temperature (°C)</g:Label>
				<g:DoubleBox ui:field="minTemperatureQueryInputBox" styleName="{style.inputBox}"></g:DoubleBox>
			</g:VerticalPanel>
			<g:VerticalPanel styleName="{style.inputPanel-row2}">
				<g:Label ui:field="maxTemperatureQueryLabel" styleName="{style.inputLabel}">Maximum Temperature (°C)</g:Label>
				<g:DoubleBox ui:field="maxTemperatureQueryInputBox" styleName="{style.inputBox}"></g:DoubleBox>
			</g:VerticalPanel>
			<g:VerticalPanel styleName="{style.inputPanel-row2}">
				<g:Label ui:field="uncertaintyQueryLabel" styleName="{style.inputLabel}">Maximum Uncertainty (°C)</g:Label>
				<g:DoubleBox ui:field="uncertaintyQueryInputBox" styleName="{style.inputBox}"></g:DoubleBox>
			</g:VerticalPanel>	
			<g:Button ui:field="filterButton" styleName="{style.filterButton}">Search</g:Button>	
		</g:HorizontalPanel>
	</g:FlowPanel>

</ui:UiBinder>