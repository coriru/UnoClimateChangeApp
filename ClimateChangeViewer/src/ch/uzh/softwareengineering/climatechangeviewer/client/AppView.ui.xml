<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
  <ui:style>
    * {
 	  font-family: 'Roboto', sans-serif;
    }

	.northPanel {
	  background-color: #eeeeee;
	}
	
	.headerPanel {
	  padding: 10px;
      height: 80px;
	  background-color: #0091ea;
	  box-shadow: 0px 0px 3px 1px rgba(0,0,0,0.6);
	  margin-bottom: 3px;
	}
	
	.westPanel {
	  background-color: white;
	  box-shadow: 0px 1px 5px 1px rgba(0,0,0,0.3);
	  margin-top: 0px;
	  margin-right: 5px;
	}	
		
	.centerPanel {
	  background-color: #fafafa;
	  margin-top: 0px;
	  margin-left: 0px;
	}
		
	.headerText {
	  margin-left: 20px;
	  margin-right: 10px;
	  font-size: 36px;
	  color: white;
	  font-weight: bold;
	  line-height: 80px;
	}
		
	.sideMenu {
	  background-color: white;
	  margin-top: 0px;
	}
		
	.sideMenuButton {
	  cursor: pointer;
	  height: 35px;
	  width: 95px;
	  color: black;
	  background-color: white;
	  border: none;
	  text-align: left;
	  font-size: 14px;
	}
		
	.sideMenuButton:hover {
	  background: #eeeeee;
	}
		
	.sideMenuButton:disabled {
	  cursor: default;
	  background: #eeeeee;
	}
		
	.header {
	  margin-left: 10px;
	  margin-right: 10px;
	  margin-top: 10px;
	  margin-bottom: 10px;
	}

  </ui:style>

  <g:RootLayoutPanel>
    <g:layer>
	  <g:DockLayoutPanel >
	    <g:north size="104">
	      <g:FlowPanel  styleName="{style.northPanel}">
	        <g:FlowPanel styleName="{style.headerPanel}">
	          <g:HorizontalPanel>
		     	<g:Image height="80px" width="80px" url="images/logo.svg"></g:Image>
		        <g:Label styleName="{style.headerText}">ClimateChangeViewer</g:Label>
		      </g:HorizontalPanel>
	        </g:FlowPanel>
	      </g:FlowPanel >
	    </g:north>
	    <g:west size='100'>
	      <g:FlowPanel styleName="{style.westPanel}">
	        <g:VerticalPanel styleName="{style.sideMenu}">
	          <g:Button ui:field="aboutViewButton" styleName="{style.sideMenuButton}">About</g:Button>
	          <g:Button ui:field="mapViewButton" styleName="{style.sideMenuButton}">World Map</g:Button>
	          <g:Button ui:field="tableViewButton" styleName="{style.sideMenuButton}">Data Table</g:Button>
	          <g:Button ui:field="sourceViewButton" styleName="{style.sideMenuButton}">Source</g:Button>
	        </g:VerticalPanel>
	      </g:FlowPanel>
	    </g:west>
	    <g:center>
	      <g:ScrollPanel ui:field="centerPanel" styleName="{style.centerPanel}">
	      </g:ScrollPanel>
	    </g:center>
	  </g:DockLayoutPanel>
	</g:layer>
  </g:RootLayoutPanel>
	
</ui:UiBinder>